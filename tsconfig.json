{
  "compilerOptions": {
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true,
    "target": "ESNext",
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "exclude": ["node_modules", "out", "public", "externally_made_stuff"],
  "include": ["**/*.ts", "**/*.tsx"]
}
