{
    "compilerOptions": {
        "alwaysStrict": true,
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "strict": true,
        "target": "ESNext",
        "jsx": "react",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "out", "public", "externally_made_stuff"],
    "include": ["**/*.ts", "**/*.tsx", "index.d.ts", "src/gatsby-ssr.js"]
}
