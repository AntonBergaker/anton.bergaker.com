		meta(name='description', content='Brief overview of my work on The Story Goes On')
		meta(name='keywords', content='programming, programmer, gamedev, gamedevelopment, game, gamemaker, tsgo, tsgogame, the story goes on')
		include ../tags.pug
		style
			include ../css/main.css
	body
		include ../header.pug
