extends layout.pug

mixin toc(title)
    .toc_entry
        a(href=`#${title}`)= title

mixin func(title, args, returns, description )
    .func(id=title)
        h3
            span= title
            | (
            each arg, index in args
                if (index != 0)
                    | , 
                span.func_param= arg.name 
            | )
        if (args.length>0)
            p.func_arglabel Arguments
        table.func_args
            each arg in args
                tr
                    td=arg.name
                    td=arg.desc
        p.func_return
            span Returns: 
            = returns
        if (description)
            p.func_description!=description
        if (block)
            block

